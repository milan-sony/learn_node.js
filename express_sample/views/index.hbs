{{!-- for loop in hbs --}}

{{#each values}}

<h3>{{@index}} . {{this}}</h3>

{{/each}}

{{!-- display inner object value --}}

<p>{{person.comments.comment}}</p>

{{!-- with (displaying objects) --}}

{{#with person}}

    <h2>{{name}}</h2>

    {{#with comments}}

        <h2>{{comment}}</h2>
        <h2>{{date}}</h2>

    {{/with}}

{{/with}}

{{!-- if condition --}}

{{#if adminPerson.admin}}

<h1>This is admin</h1>

{{else}}

<h1>This is not admin</h1>

{{/if}}